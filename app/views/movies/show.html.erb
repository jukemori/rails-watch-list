<div class="text-white movie-show-container">
  <div class="d-flex justify-content-between">
    <%= link_to 'Lists', lists_path, class: "m-3 btn btn-flat" %>
  </div>
  <div class="movie-show">
    <div class="movie-show-img">
      <%= image_tag @movie.poster_url, alt: @movie.title, class: "movie-img rounded-top" %>
    </div>
    <div class="movie-info">
      <h1><%= @movie.title %></h1>
      <p><i class="fas fa-star star-yellow"></i> <%= @movie.rating %></p>
      <div class="overview">
        <p class="overview-title">Overview</p>
        <p><%= @movie.overview %></p>
        <%= link_to 'Add Movie', new_movie_bookmark_path(@movie), class: "mt-3 btn btn-flat" %>
      </div>
    </div>
  </div>
  <%= render 'carousel' %>
</div>
